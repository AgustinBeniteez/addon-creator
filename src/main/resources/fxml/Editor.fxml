<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.Group?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.agustinbenitez.addoncreator.ui.EditorController"
            styleClass="ide-root">
    
    <!-- Top: Menu Bar and Project Name -->
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="title-bar" style="-fx-background-color: #333333;">
            <MenuBar styleClass="ide-menubar" HBox.hgrow="ALWAYS">
                <Menu text="File">
                    <MenuItem fx:id="menuNewFile" text="New File" accelerator="Ctrl+N"/>
                    <MenuItem fx:id="menuSave" text="Save" accelerator="Ctrl+S"/>
                    <MenuItem fx:id="menuSaveAll" text="Save All" accelerator="Ctrl+Shift+S"/>
                    <CheckMenuItem fx:id="menuAutoSave" text="Auto Save"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="menuExport" text="Export Project" accelerator="Ctrl+E"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="menuClose" text="Close Project" accelerator="Ctrl+W"/>
                </Menu>
                
                <Menu text="Tools">
                    <MenuItem fx:id="menuAddEntity" text="Add Entity"/>
                    <MenuItem fx:id="menuAddItem" text="Add Item"/>
                    <MenuItem fx:id="menuAddBlock" text="Add Block"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="menuTest" text="Test Addon"/>
                </Menu>
                
                <Menu text="View">
                    <CheckMenuItem fx:id="menuToggleConsole" text="Console" selected="true"/>
                    <CheckMenuItem fx:id="menuToggleFileTree" text="File Explorer" selected="true"/>
                </Menu>
                
                <Menu text="Help">
                    <MenuItem fx:id="menuAbout" text="About"/>
                    <MenuItem fx:id="menuDocs" text="Documentation"/>
                    <MenuItem fx:id="menuLicenses" text="Licencias"/>
                </Menu>
            </MenuBar>
            <Label fx:id="projectNameToolbar" text="Project Name" styleClass="toolbar-label" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="12"/>
                </font>
                <padding>
                    <Insets right="15" left="15"/>
                </padding>
            </Label>
        </HBox>
    </top>
    
    <!-- Left: Activity Bar (Vertical Menu) -->
    <left>
        <VBox styleClass="activity-bar" spacing="15" alignment="TOP_CENTER" minWidth="50" maxWidth="50" style="-fx-background-color: #252526; -fx-padding: 10 0 10 0;">
            
            <Button fx:id="btnBack" styleClass="activity-button" contentDisplay="GRAPHIC_ONLY">
                <tooltip><Tooltip text="Inicio"/></tooltip>
                <graphic>
                    <SVGPath content="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z" styleClass="activity-icon" scaleX="0.8" scaleY="0.8"/>
                </graphic>
            </Button>
            
            <Button fx:id="btnExplorer" styleClass="activity-button" contentDisplay="GRAPHIC_ONLY">
                <tooltip><Tooltip text="Explorer"/></tooltip>
                <graphic>
                    <SVGPath content="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm0 12H4V8h16v10z" styleClass="activity-icon" scaleX="0.8" scaleY="0.8"/>
                </graphic>
            </Button>
            
            <Button fx:id="btnSearch" styleClass="activity-button" contentDisplay="GRAPHIC_ONLY">
                <tooltip><Tooltip text="Search"/></tooltip>
                <graphic>
                    <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" styleClass="activity-icon" scaleX="0.8" scaleY="0.8"/>
                </graphic>
            </Button>
            
            <Button fx:id="btnGit" styleClass="activity-button" contentDisplay="GRAPHIC_ONLY">
                <tooltip><Tooltip text="Source Control"/></tooltip>
                <graphic>
                    <SVGPath content="M23.546 10.93L13.067.452c-.604-.603-1.582-.603-2.188 0L8.708 2.627l2.76 2.76c.645-.215 1.379-.07 1.889.441.516.515.658 1.258.438 1.9l2.658 2.66c.645-.223 1.387-.078 1.9.435.721.72.721 1.884 0 2.604-.719.719-1.881.719-2.6 0-.539-.541-.674-1.337-.404-1.99L12.68 8.705l-2.08 2.08c.18.602.042 1.261-.4 1.702-.541.54-1.341.674-1.992.404l-2.662 2.663c.221.643.078 1.381-.436 1.896-.72.719-1.885.719-2.605 0-.719-.719-.719-1.885 0-2.605.51-.51 1.246-.656 1.889-.438l2.66-2.66c-.221-.645-.074-1.387.441-1.902.518-.518 1.26-.662 1.906-.441l2.08-2.08-2.664-2.664-5.65 5.65c-.603.603-.603 1.584 0 2.188l10.48 10.478c.604.604 1.582.604 2.188 0l10.48-10.48c.604-.604.604-1.582 0-2.188z" 
                             scaleX="0.8" scaleY="0.8" styleClass="activity-icon"/>
                </graphic>
            </Button>
            
            <Button fx:id="btnSave" styleClass="activity-button" contentDisplay="GRAPHIC_ONLY">
                <tooltip><Tooltip text="Save"/></tooltip>
                <graphic>
                    <SVGPath content="M17 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z" styleClass="activity-icon" scaleX="0.8" scaleY="0.8"/>
                </graphic>
            </Button>
            
            <Button fx:id="btnFormat" styleClass="activity-button" contentDisplay="GRAPHIC_ONLY">
                <tooltip><Tooltip text="Format"/></tooltip>
                <graphic>
                    <Group scaleX="0.8" scaleY="0.8">
                        <SVGPath content="M 6 6 L 20 6 M 10 11 L 20 11 M 6 16 L 16 16 M 3 9 L 5 11 L 3 13" 
                                 stroke="WHITE" strokeWidth="2" strokeLineCap="ROUND" strokeLineJoin="ROUND" fill="TRANSPARENT"/>
                    </Group>
                </graphic>
            </Button>
            
            <Button fx:id="btnExport" styleClass="activity-button" contentDisplay="GRAPHIC_ONLY">
                <tooltip><Tooltip text="Export"/></tooltip>
                <graphic>
                    <SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" styleClass="activity-icon" scaleX="0.8" scaleY="0.8"/>
                </graphic>
            </Button>
            
            <Button fx:id="btnTest" styleClass="activity-button" contentDisplay="GRAPHIC_ONLY">
                <tooltip><Tooltip text="Test"/></tooltip>
                <graphic>
                    <SVGPath content="M8 5v14l11-7z" styleClass="activity-icon" scaleX="0.8" scaleY="0.8"/>
                </graphic>
            </Button>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <Button fx:id="btnSettings" styleClass="activity-button" contentDisplay="GRAPHIC_ONLY">
                <tooltip><Tooltip text="Settings"/></tooltip>
                <graphic>
                    <SVGPath content="M19.14 12.94c.04-.3.06-.61.06-.94 0-.32-.02-.64-.07-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.05.3-.09.63-.09.94s.02.64.07.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.04.24.24.41.48.41h3.84c.24 0 .43-.17.47-.41l.36-2.54c.59-.24 1.13-.57 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z" styleClass="activity-icon" scaleX="0.8" scaleY="0.8"/>
                </graphic>
            </Button>
            
        </VBox>
    </left>
    
    <!-- Center: Main IDE Area -->
    <center>
        <SplitPane dividerPositions="0.2" styleClass="ide-splitpane">
            
            <!-- Left: Sidebar Container -->
            <StackPane minWidth="200">
                <!-- Project Explorer View -->
                <VBox fx:id="projectExplorerView" styleClass="ide-sidebar" spacing="5">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                    
                    <!-- Add Element Button -->
                    <Button fx:id="btnAddElement" text="+ Add Element" 
                            styleClass="add-element-button" maxWidth="Infinity">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Button>
                    
                    <Separator/>
                    
                    <!-- File Explorer Header -->
                    <HBox alignment="CENTER_LEFT" spacing="5">
                        <padding>
                            <Insets top="10" bottom="5"/>
                        </padding>
                        <Label text="PROJECT EXPLORER" styleClass="sidebar-section-title">
                            <font>
                                <Font name="System Bold" size="11"/>
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnNewFile" text="+" styleClass="tree-action-button"/>
                    </HBox>
                    
                    <!-- File Tree -->
                    <TreeView fx:id="fileTree" VBox.vgrow="ALWAYS" 
                             styleClass="file-tree"/>
                </VBox>
                
                <!-- Search View -->
                <VBox fx:id="searchView" styleClass="ide-sidebar" spacing="10" visible="false">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <Label text="SEARCH" styleClass="sidebar-section-title">
                        <font>
                            <Font name="System Bold" size="11"/>
                        </font>
                    </Label>
                    
                    <HBox spacing="5">
                        <TextField fx:id="searchField" promptText="Search in Project..." HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnDoSearch" styleClass="console-button" contentDisplay="GRAPHIC_ONLY">
                    <graphic>
                        <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" fill="white" />
                    </graphic>
                </Button>
                    </HBox>
                    
                    <Label fx:id="searchStatusLabel" text="No results" textFill="#888888"/>
                    
                    <ListView fx:id="searchResultsList" VBox.vgrow="ALWAYS" styleClass="file-tree"/>
                </VBox>
                
                <!-- Git View -->
                <VBox fx:id="gitView" styleClass="ide-sidebar" spacing="10" visible="false">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <Label text="SOURCE CONTROL" styleClass="sidebar-section-title">
                        <font>
                            <Font name="System Bold" size="11"/>
                        </font>
                    </Label>
                    
                    <!-- No Repo Content -->
                    <VBox fx:id="noGitRepoContent" spacing="15" alignment="CENTER" VBox.vgrow="ALWAYS">
                        <Label text="No git repository found." wrapText="true" textAlignment="CENTER" style="-fx-text-fill: #888888;"/>
                        <Button fx:id="btnInitGit" text="Initialize Repository" maxWidth="Infinity"/>
                    </VBox>

                    <!-- Repo Content -->
                    <VBox fx:id="gitRepoContent" spacing="10" VBox.vgrow="ALWAYS" visible="false" managed="false">
                        <HBox spacing="5" alignment="CENTER_LEFT">
                             <Label text="Branch:" style="-fx-font-weight: bold; -fx-text-fill: #cccccc;"/>
                             <Label fx:id="gitBranchLabel" text="main" style="-fx-text-fill: #cccccc;"/>
                             <Region HBox.hgrow="ALWAYS"/>
                             <Button fx:id="btnLinkRemote" text="Link" style="-fx-font-size: 10px;"/>
                        </HBox>
                        
                        <HBox spacing="5" alignment="CENTER_LEFT">
                             <Button fx:id="btnGitPush" text="Push" style="-fx-font-size: 10px;" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                                 <graphic>
                                     <SVGPath content="M4 12l1.41 1.41L11 7.83V20h2V7.83l5.58 5.59L20 12l-8-8-8 8z" style="-fx-fill: #cccccc;" scaleX="0.7" scaleY="0.7"/>
                                 </graphic>
                             </Button>
                             <Button fx:id="btnGitFetch" text="Fetch" style="-fx-font-size: 10px;" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                                 <graphic>
                                     <SVGPath content="M20 12l-1.41-1.41L13 16.17V4h-2v12.17l-5.58-5.59L4 12l8 8 8-8z" style="-fx-fill: #cccccc;" scaleX="0.7" scaleY="0.7"/>
                                 </graphic>
                             </Button>
                        </HBox>
                        
                        <Separator styleClass="separator"/>
                        
                        <Label text="Changes" styleClass="section-title" style="-fx-font-size: 12px;"/>
                        <ListView fx:id="gitChangesList" VBox.vgrow="ALWAYS" styleClass="git-file-list"/>
                        
                        <VBox styleClass="git-commit-area" spacing="5">
                            <TextArea fx:id="commitMessageArea" promptText="Commit Message (Ctrl+Enter)" 
                                      prefRowCount="3" wrapText="true"/>
                            <Button fx:id="commitButton" text="Commit" maxWidth="Infinity"/>
                        </VBox>
                    </VBox>
                </VBox>
            </StackPane>
            
            <!-- Right: Code Editor Area -->
            <BorderPane styleClass="editor-area">
                
                <!-- Center: Code Editor with Tabs -->
                <center>
                    <VBox>
                        <!-- File Tabs -->
                        <TabPane fx:id="editorTabs" styleClass="editor-tabs" 
                                VBox.vgrow="ALWAYS">
                            <!-- Tabs will be added dynamically -->
                        </TabPane>
                    </VBox>
                </center>
                
            </BorderPane>
            
        </SplitPane>
    </center>
    
    <!-- Bottom: Collapsible Console -->
    <bottom>
        <VBox fx:id="consoleContainer" styleClass="console-container">
            <AnchorPane VBox.vgrow="ALWAYS">
                <TabPane fx:id="bottomTabPane" styleClass="bottom-tab-pane" tabClosingPolicy="UNAVAILABLE" 
                         AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
                         AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <Tab text="LOG ADDON CREATOR">
                        <VBox>
                             <!-- Console Controls (Clear) - Optional, maybe inside the tab content or floating? 
                                  Let's put the Clear button inside the VBox of the Log tab. -->
                             <HBox alignment="CENTER_RIGHT" style="-fx-padding: 2; -fx-background-color: #252526;">
                                <Button fx:id="btnClearConsole" styleClass="console-button" contentDisplay="GRAPHIC_ONLY" style="-fx-padding: 2 5;">
                                    <graphic>
                                        <Group scaleX="0.7" scaleY="0.7">
                                            <SVGPath content="M5 6H19" stroke="#cccccc" strokeWidth="2" strokeLineCap="ROUND"/>
                                            <SVGPath content="M9 6V4C9 3.44772 9.44772 3 10 3H14C14.5523 3 15 3.44772 15 4V6" stroke="#cccccc" strokeWidth="2" strokeLineCap="ROUND"/>
                                            <SVGPath content="M18.8334 7L17.5739 19.5952C17.4828 20.5061 16.7127 21.2 15.7969 21.2H8.20311C7.28732 21.2 6.51718 20.5061 6.42612 19.5952L5.16669 7" stroke="#cccccc" strokeWidth="2" strokeLineCap="ROUND"/>
                                            <SVGPath content="M10 11V17" stroke="#cccccc" strokeWidth="2" strokeLineCap="ROUND"/>
                                            <SVGPath content="M14 11V17" stroke="#cccccc" strokeWidth="2" strokeLineCap="ROUND"/>
                                        </Group>
                                    </graphic>
                                    <tooltip><Tooltip text="Clear Log"/></tooltip>
                                </Button>
                             </HBox>
                             <TextArea fx:id="consoleOutput" editable="false" wrapText="true"
                                     styleClass="console-output" prefRowCount="8" VBox.vgrow="ALWAYS">
                                <font>
                                    <Font name="Consolas" size="12"/>
                                </font>
                            </TextArea>
                        </VBox>
                    </Tab>
                    <Tab text="TERMINAL">
                        <VBox spacing="0">
                            <TextArea fx:id="terminalOutput" editable="false" wrapText="true"
                                     styleClass="console-output" VBox.vgrow="ALWAYS" 
                                     style="-fx-font-family: 'Consolas'; -fx-control-inner-background: #1e1e1e; -fx-text-fill: #cccccc;">
                            </TextArea>
                            <TextField fx:id="terminalInput" promptText="Type command..." 
                                     style="-fx-background-color: #2d2d2d; -fx-text-fill: white; -fx-font-family: 'Consolas'; -fx-border-color: #3e3e3e; -fx-border-width: 1 0 0 0;"/>
                        </VBox>
                    </Tab>
                </TabPane>
                
                <Button fx:id="btnToggleConsole" styleClass="console-button" 
                        AnchorPane.topAnchor="2.0" AnchorPane.rightAnchor="5.0"
                        style="-fx-font-size: 10px; -fx-padding: 2 5;">
                    <graphic>
                        <SVGPath content="M20,19V7H4V19H20M20,3A2,2 0 0,1 22,5V19A2,2 0 0,1 20,21H4A2,2 0 0,1 2,19V5C2,3.89 2.9,3 4,3H20M13,17V15H18V17H13M9.68,13.68L12,10.5L9.68,7.32L8,8.5L9.34,10.5L8,12.5L9.68,13.68Z" 
                                 style="-fx-fill: #cccccc;" scaleX="0.7" scaleY="0.7"/>
                    </graphic>
                </Button>
            </AnchorPane>
        </VBox>
    </bottom>
    
</BorderPane>
